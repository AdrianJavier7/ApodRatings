{% extends 'base.html.twig' %}

{% block title %}{Ãšltimas 30 fotos{% endblock %}

{% block body %}

    <div class="uk-section uk-section-default">
        <div class="uk-container">

            <h1 class="uk-heading-line uk-text-center"><span>Fotos Astrales</span></h1>

            <div class="uk-child-width-1-1 uk-child-width-1-2@s uk-child-width-1-3@m uk-grid-small uk-grid-match" uk-grid>
                {% for foto in lista_foto_astral %}
                    {% set imageUrl = foto.hdurl ?? foto.url ?? null %}

                    <div>
                        <div class="uk-card uk-card-default uk-card-hover uk-card-body">

                            {% if imageUrl %}
                                <div class="uk-card-media-top uk-cover-container" style="height: 220px;">
                                    <img src="{{ imageUrl }}" alt="{{ foto.title }}" loading="lazy" uk-cover>
                                </div>
                            {% endif %}

                            <h3 class="uk-card-title">{{ foto.title }}</h3>
                            <p class="uk-text-meta">{{ foto.date }}</p>

                            <p class="uk-text-truncate">{{ foto.explanation }}</p>

                            <div class="uk-flex uk-flex-between uk-margin-top">
                                <a class="uk-button uk-button-primary" href="#">Review</a>

                                {% if imageUrl %}
                                    <a class="uk-button uk-button-text" href="{{ imageUrl }}" target="_blank">Ver original</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

        </div>
    </div>

{% endblock %}
