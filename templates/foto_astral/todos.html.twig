{% extends 'base.html.twig' %}

{% block title %}Últimas 30 fotos{% endblock %}

{% block body %}
    <div class="uk-section uk-light" style="background: #0b0d17; min-height: 100vh;">
        <div class="uk-container">

            <div class="uk-margin-large-bottom">
                <h1 class="uk-text-bold uk-margin-small-bottom">Exploración Cósmica</h1>
                <p class="uk-text-muted uk-margin-remove">Últimas 30 capturas de la NASA</p>
                <hr class="uk-divider-small">
            </div>


            <div class="uk-child-width-1-1 uk-child-width-1-2@s uk-child-width-1-3@m uk-grid-medium" uk-grid>
                {% for foto in lista_foto_astral %}
                    {% set imageUrl = foto.hdurl ?? foto.url ?? null %}

                    {# Lógica para calcular la media de estrellas #}
                    {% set total_estrellas = 0 %}
                    {% set resenas = foto.reviews %} {# Accedemos a la relación getReviews() #}
                    {% set num_resenas = resenas|length %}

                    {% if num_resenas > 0 %}
                        {% for resena in resenas %}
                            {% set total_estrellas = total_estrellas + resena.estrellas %}
                        {% endfor %}
                        {% set media = (total_estrellas / num_resenas)|round(1) %}
                    {% else %}
                        {% set media = 0 %}
                    {% endif %}

                    <div>
                        <div class="uk-inline-clip uk-transition-toggle uk-width-1-1" tabindex="0">
                            <div class="uk-cover-container uk-border-rounded uk-box-shadow-medium" style="height: 250px;">
                                {% if imageUrl %}
                                    <img src="{{ imageUrl }}" alt="{{ foto.title }}" loading="lazy" uk-cover>
                                {% else %}
                                    <div class="uk-placeholder uk-text-center uk-padding-large">Sin Imagen</div>
                                {% endif %}

                                <div class="uk-transition-fade uk-position-cover uk-overlay uk-overlay-primary uk-flex uk-flex-center uk-flex-middle">
                                    <a href="{{ path('app_foto_astral_dentro', { date: foto.date|date('Y-m-d') }) }}" class="uk-button uk-button-default uk-border-pill">
                                        Ver Detalles
                                    </a>
                                </div>
                            </div>

                            <div class="uk-margin-small-top">
                                <h3 class="uk-text-bold uk-margin-remove" style="font-size: 1.1rem;">
                                    <a class="uk-link-reset" href="{{ path('app_foto_astral_dentro', { date: foto.date|date('Y-m-d') }) }}">
                                        {{ foto.title }}
                                    </a>
                                </h3>

                                <div class="uk-margin-small-top uk-flex uk-flex-middle">
                                    {% if num_resenas > 0 %}
                                        <div class="uk-margin-small-right">
                                            {% for i in 1..5 %}
                                                <span uk-icon="icon: star; ratio: 0.7" style="color: {{ i <= media|round ? '#f8ce0b' : '#444' }};"></span>
                                            {% endfor %}
                                        </div>
                                        <span class="uk-text-meta" style="font-size: 0.75rem;">({{ media }})</span>
                                    {% else %}
                                        <span class="uk-text-meta" style="font-size: 0.75rem;">Sin valoraciones</span>
                                    {% endif %}
                                </div>

                                <div class="uk-flex uk-flex-between uk-flex-middle uk-margin-small-top">
                        <span class="uk-text-meta" style="font-size: 0.8rem;">
                            <span uk-icon="icon: calendar; ratio: 0.7"></span> {{ foto.date|date('d M, Y') }}
                        </span>
                                    <a href="{{ path('app_foto_astral_dentro', { date: foto.date|date('Y-m-d') }) }}"
                                       class="uk-text-primary uk-text-bold" style="font-size: 0.8rem; text-decoration: none;">
                                        REVIEW →
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

        </div>
    </div>
{% endblock %}
